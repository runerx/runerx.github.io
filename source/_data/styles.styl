.content-wrap {
  opacity: 0.8;
}

//侧边框的透明度设置
.sidebar {
  background-color: transparent;
  opacity: 0.8;
}

//菜单栏的透明度设置
.header-inner {
  background: rgba(255,255,255,0.8);
}
